<h1>Your Expenses</h1>
 <!-- Add a link to the expense form -->
<%= link_to 'Add New Expense', expense_form_expenses_path, class: 'btn btn-primary' %>

<% if @expenses.any? %>
  <table border="1" cellpadding="10" cellspacing="0">
    <thead>
      <tr>
        <th>Description</th>
        <th>Amount</th>
        <th>Date</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @expenses.each do |expense| %>
        <tr>
          <td><%= expense.description %></td>
          <td><%= number_to_currency(expense.amount) %></td>
          <td><%= expense.created_at.strftime("%B %d, %Y") %></td>
          <td>
            <%= link_to 'Edit', edit_expense_path(expense) %> |
            <%= link_to 'Delete', expense, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>You have no expenses recorded.</p>
<% end %>

<p><%= link_to 'Back to Dashboard', root_path %></p>
